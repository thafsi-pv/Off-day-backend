# Database Configuration
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/offday?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins (frontend URLs)
# For development, you can use '*' to allow all origins
CORS_ORIGIN="http://localhost:5173,http://localhost:3000"

# API Configuration
API_PREFIX=api

# Optional: JWT Configuration (if you plan to add JWT auth later)
# JWT_SECRET=your-super-secret-jwt-key-change-in-production
# JWT_EXPIRES_IN=24h

