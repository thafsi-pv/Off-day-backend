generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  name      String
  email     String?    @unique
  password  String
  role      Role       @default(USER)
  status    UserStatus @default(PENDING)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  mobile    String?    @unique
  leaves    Leave[]
}

model Shift {
  id        String   @id @default(cuid())
  name      String
  slots     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  leaves    Leave[]
}

model Config {
  id           String    @id @default(cuid())
  weekRange    WeekRange @default(TWO_WEEKS)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Leave {
  id        String      @id @default(cuid())
  userId    String
  date      DateTime
  shiftId   String
  status    LeaveStatus @default(PENDING)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  reason    String?
  creatorId String?
  shift     Shift       @relation(fields: [shiftId], references: [id])
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
  @@index([shiftId])
}

enum Role {
  USER
  ADMIN
}

enum UserStatus {
  PENDING
  ACTIVE
  INACTIVE
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum WeekRange {
  ONE_WEEK
  TWO_WEEKS
  ONE_MONTH
}
